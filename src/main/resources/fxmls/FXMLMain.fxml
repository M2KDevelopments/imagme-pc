<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="mainScene" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="1000.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainController">
    <children>
        <SplitPane dividerPositions="0.5" layoutX="82.0" layoutY="100.0" prefHeight="200.0" prefWidth="200.0"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                   AnchorPane.topAnchor="0.0">
            <items>
                <VBox alignment="TOP_CENTER" spacing="6.0" styleClass="fontSize">
                    <children>
                        <Label text="Image Me">
                            <font>
                                <Font name="System Bold" size="42.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <JFXButton buttonType="RAISED" onAction="#changeImage" ripplerFill="#0051ca"
                                           text="Change Image">
                                    <graphic>
                                        <ImageView fx:id="imageViewLogo" fitHeight="150.0" fitWidth="200.0"
                                                   pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../icons/icon_m2kdev.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <cursor>
                                        <Cursor fx:constant="HAND"/>
                                    </cursor>
                                </JFXButton>
                                <JFXCheckBox fx:id="chbxUseImage" checkedColor="#10689c" selected="true"
                                             text="Use Image"/>
                            </children>
                        </HBox>
                        <Separator prefWidth="200.0"/>
                        <HBox alignment="CENTER" spacing="15.0">
                            <children>
                                <JFXColorPicker fx:id="colorPickImage" editable="true" onAction="#colorChange"
                                                promptText="Pick Color"/>
                                <JFXCheckBox fx:id="chbxColor" checkedColor="#104e9c" onAction="#useSpecificColor"
                                             text="Use Specific Color"/>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10.0" top="10.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="32.0" prefWidth="442.0" spacing="15.0">
                            <children>
                                <JFXColorPicker fx:id="colorPickText" editable="true" onAction="#colorChange"
                                                promptText="Pick Color For Caption"/>
                                <JFXTextField fx:id="txtCaption" labelFloat="true" promptText="Capation"/>
                            </children>
                            <VBox.margin>
                                <Insets top="30.0"/>
                            </VBox.margin>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </HBox>
                        <JFXButton buttonType="RAISED" onAction="#saveImages" ripplerFill="#1b5bba"
                                   styleClass="floatingActionLabel" text="Save Images">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </JFXButton>
                    </children>
                </VBox>
                <Canvas fx:id="canvas" height="550.0" width="500.0"/>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
